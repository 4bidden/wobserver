{
  "build": ["css", "js", "html"],
  "watch": ["css", "js", "html"],
  "root": {
    "src": "./src",
    "dest": "./assets"
  },
  "css": {
    "src": "css",
    "dest": "",
    "pattern": "**/*.scss"
  },
  "js": {
    "src": "js",
    "dest": "",
    "pattern": "**/*.js"
  },
  "html": {
    "src": "html",
    "dest": "",
    "pattern": "**/*"
  }
}